<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @meeting.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @meeting.description %>
</p>

<%= link_to 'Edit', edit_meeting_path(@meeting) %> |
<%= link_to 'Back', meetings_path %>
<hr>
<%= form_with(model: [@meeting, Comment.new] ) do |form| %>
  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit class:'btn btn-primary', :disable_with => 'Submiting...'%>
  </div>
<% end %>
<hr>

<% if @comments.empty?%>
  <p>尚未有人留言</p>
<% else %>
  <% @floor = 1%>
  <% @comments.each do |comment|%>
    <%= @floor %>楼
    <div>
      <%= comment.user %>
      <%= comment.message %>
    </div>
    <% @floor += 1%>
    <br>
  <% end %>
<% end %>
